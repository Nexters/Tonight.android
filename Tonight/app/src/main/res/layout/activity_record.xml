<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.teamnexters.tonight.RecordActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startBttn"
        android:nestedScrollingEnabled="false"
        android:onClick="buttonTapped"
        android:background="@drawable/mic"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/timer"
        android:layout_alignStart="@+id/timer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/play"
        android:id="@+id/playBttn"
        android:onClick="buttonTapped"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time shows"
        android:id="@+id/timer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:nestedScrollingEnabled="true"
        android:layout_below="@+id/startBttn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stopPlay"
        android:onClick="buttonTapped"
        android:layout_alignBottom="@+id/playBttn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="stop Play" />

</RelativeLayout>
