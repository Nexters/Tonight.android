<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.teamnexters.tonight.RecordActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startBttn"
        android:nestedScrollingEnabled="false"
        android:onClick="buttonTapped"
        android:background="@drawable/mic"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/mediaController"
        android:layout_toRightOf="@+id/stopBttn"
        android:layout_toEndOf="@+id/stopBttn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stopBttn"
        android:background="@drawable/stop"
        android:onClick="buttonTapped"
        android:layout_below="@+id/startBttn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/play"
        android:id="@+id/playBttn"
        android:onClick="buttonTapped"
        android:layout_alignTop="@+id/stopBttn"
        android:layout_toRightOf="@+id/stopBttn"
        android:layout_toEndOf="@+id/stopBttn"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp" />

    <MediaController
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mediaController"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
